<body class="restaurantPage">

<h1>Edit Restaurant</h1>

<form method="POST" action="/restaurant/{{restaurant._id}}?_method=PUT">

  <input type="text" value="{{restaurant.name}}" placeholder="Restaurant" name="name" />

  <input type="text" value="{{restaurant.location}}" placeholder="Address" name="location" />

  <input type="date" value="{{restaurant.operationDays}}" name="operationDays" />

  <input type="boolean" value="{{restaurant.isOpen}}" placeholder="Open now?" name="isOpen" />

  <input type="text" value="{{restaurant.priceRange}}" placeholder="Price Range" name="priceRange" />

  <select name="rating">
    <option value="{{restaurant.rating}}">{{restaurant.rating}}</option>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>

  <input type="submit" value="Update Restaurant" />

</form>

</body>