<body class="itemPage">
<div class="singleItem">
<div class="singleItemItems">

<h1>Edit Item</h1>

<form class="itemForm" method="POST" action="/item/{{item._id}}?_method=PUT">

<table class="singleTable">
  
  <tr>
    <th></th>
    <th></th>
  </tr>
  <tr>
  <td><h4><span>Name of Food?</span></h4></td>
  <td><h4>   
    <input type="text" value="{{item.foodName}}" placeholder="Name of dish" name="foodName" />
  </h4></td></tr>

 <tr>
  <td><h4><span>Price of Food</span></h4></td>
  <td><h4>   
   <input type="number" value="{{item.price}}" placeholder="Price of dish" name="price" />
  </h4></td></tr>

 <tr>
  <td><h4><span>Review of Food</span></h4></td>
  <td><h4>   
   <select name="review">
    <option value="{{item.review}}">{{item.review}}</option>
    <option value="">None</option>
    <option value="1">1-Horrible</option>
    <option value="2">2-Bad</option>
    <option value="3">3-Decent</option>
    <option value="4">4-Tasty</option>
    <option value="5">5-Excellent</option>
  </select>
  </h4></td></tr>

  </table>
  
  <button class="itemButton" type="submit">Update Item</button>

</form>

</div>
</div>

</body>